{
  "pipeline": {
    "name": "Fantasy Football Analytics Pipeline",
    "version": "1.0.0",
    "description": "Comprehensive fantasy football analytics pipeline with Monte Carlo and Bayesian analysis"
  },
  "pipeline_steps": [
    {
      "name": "data_collection",
      "script": "ffbayes.data_pipeline.collect_data",
      "description": "Collect NFL fantasy football data",
      "timeout": 300,
      "retry_count": 3,
      "dependencies": [],
      "critical": true,
      "parallel_group": "data_processing"
    },
    {
      "name": "data_validation",
      "script": "ffbayes.data_pipeline.validate_data",
      "description": "Validate collected data quality",
      "timeout": 120,
      "retry_count": 2,
      "dependencies": ["data_collection"],
      "critical": true,
      "parallel_group": "data_processing"
    },
    {
      "name": "data_preprocessing",
      "script": "ffbayes.data_pipeline.preprocess_analysis_data",
      "description": "Preprocess data for analysis",
      "timeout": 180,
      "retry_count": 2,
      "dependencies": ["data_validation"],
      "critical": true,
      "parallel_group": "data_processing"
    },
    {
      "name": "vor_draft_strategy",
      "script": "ffbayes.draft_strategy.traditional_vor_draft",
      "description": "Generate traditional VOR-based draft strategy FIRST to create rankings",
      "timeout": 300,
      "retry_count": 2,
      "dependencies": ["data_preprocessing"],
      "critical": true,
      "parallel_group": "strategy"
    },
    {
      "name": "create_unified_dataset",
      "script": "ffbayes.data_pipeline.create_unified_dataset",
      "description": "Create unified dataset with VOR rankings for all models",
      "timeout": 120,
      "retry_count": 2,
      "dependencies": ["vor_draft_strategy"],
      "critical": true,
      "parallel_group": "data_processing"
    },
    {
      "name": "hybrid_mc_analysis",
      "script": "ffbayes.analysis.hybrid_mc_bayesian",
      "description": "Run Hybrid Monte Carlo + Bayesian analysis with uncertainty layers",
      "timeout": 900,
      "retry_count": 2,
      "dependencies": ["create_unified_dataset"],
      "critical": true,
      "parallel_group": "modeling"
    },
    {
      "name": "bayesian_draft_strategy",
      "script": "ffbayes.draft_strategy.bayesian_draft_strategy",
      "args": "--draft-position 10 --league-size 10 --risk-tolerance medium",
      "description": "Generate optimal draft strategies using Bayesian predictions",
      "timeout": 300,
      "retry_count": 2,
      "dependencies": ["hybrid_mc_analysis"],
      "critical": true,
      "parallel_group": "strategy"
    },
    {
      "name": "draft_strategy_comparison",
      "script": "ffbayes.analysis.draft_strategy_comparison",
      "description": "Compare VOR and Bayesian draft strategies with analysis and visualizations",
      "timeout": 300,
      "retry_count": 2,
      "dependencies": ["vor_draft_strategy", "bayesian_draft_strategy"],
      "critical": false,
      "parallel_group": "analysis"
    },
    {
      "name": "pre_draft_visualizations",
      "script": "ffbayes.visualization.create_pre_draft_visualizations",
      "description": "Generate comprehensive pre-draft visualizations for draft strategy",
      "timeout": 180,
      "retry_count": 2,
      "dependencies": ["draft_strategy_comparison"],
      "critical": false,
      "parallel_group": "analysis"
    },
    {
      "name": "team_aggregation",
      "script": "ffbayes.analysis.bayesian_team_aggregation",
      "description": "Aggregate individual predictions to team totals (POST-DRAFT ONLY)",
      "timeout": 300,
      "retry_count": 2,
      "dependencies": ["hybrid_mc_analysis"],
      "critical": false,
      "parallel_group": "modeling"
    },
    {
      "name": "monte_carlo_validation",
      "script": "ffbayes.analysis.montecarlo_historical_ff",
      "args": "",
      "description": "Validate drafted teams using Monte Carlo simulation (POST-DRAFT ONLY)",
      "timeout": 600,
      "retry_count": 2,
      "dependencies": ["bayesian_draft_strategy", "create_unified_dataset"],
      "critical": false,
      "parallel_group": "validation"
    },

    {
      "name": "post_draft_visualizations",
      "script": "ffbayes.visualization.create_post_draft_visualizations",
      "description": "Generate comprehensive post-draft visualizations for team analysis",
      "timeout": 180,
      "retry_count": 2,
      "dependencies": ["monte_carlo_validation", "team_aggregation"],
      "critical": false,
      "parallel_group": "analysis"
    }
  ],
  "global_config": {
    "max_parallel_steps": 1,
    "pipeline_timeout": 7200,
    "default_timeout": 300,
    "default_retry_count": 2,
    "retry_delay": 5,
    "progress_monitoring": true,
    "error_recovery": true
  },
  "parallel_groups": {
    "data_processing": {
      "max_concurrent": 1,
      "timeout": 600
    },
    "modeling": {
      "max_concurrent": 1,
      "timeout": 1200
    },
    "strategy": {
      "max_concurrent": 1,
      "timeout": 600
    },
    "validation": {
      "max_concurrent": 1,
      "timeout": 900
    },
    "analysis": {
      "max_concurrent": 1,
      "timeout": 600
    }
  },
  "error_handling": {
    "retry_strategies": {
      "exponential_backoff": true,
      "max_backoff_multiplier": 3,
      "jitter": true
    },
    "critical_failure_action": "stop_pipeline",
    "non_critical_failure_action": "continue_with_warnings",
    "max_total_retries": 5
  },
  "monitoring": {
    "alert_thresholds": {
      "cpu_usage_warning": 0.8,
      "memory_usage_warning": 0.8,
      "disk_usage_warning": 0.9
    },
    "resource_check_interval": 30,
    "performance_tracking": true,
    "resource_usage_tracking": true,
    "progress_update_interval": 30
  },
  "output": {
    "results_directory": "results",
    "plots_directory": "plots",
    "logs_directory": "logs",
    "cleanup_old_files": true
  },
  "environment": {
    "python_path": "python",
    "conda_environment": "ffbayes",
    "working_directory": ".",
    "environment_variables": {
      "MAX_CORES": "4",
      "USE_MULTIPROCESSING": "true"
    }
  }
}
